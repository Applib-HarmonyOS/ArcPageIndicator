<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/res/app"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:left_padding="16vp"
    ohos:right_padding="16vp"
    ohos:bottom_padding="16vp"
    ohos:top_padding="16vp"
    >

    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="center"/>

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="match_parent"
        ohos:align_bottom="$id:page_slider"
        ohos:id="$+id:arc_pi_1"
        app:arcOrientation="toUp"
        app:animationType="bump"
        app:spotsRadius = "24"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:align_bottom="$id:page_slider"
        ohos:align_left="$id:page_slider"
        ohos:id="$+id:arc_pi_2"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toUpRight"
        app:animationType="slide"
        app:spotsRadius = "18"
        app:spotsColor = "#FF3F51B5"
        app:selectedSpotColor = "#FFFF4081"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="60vp"
        ohos:width="120vp"
        ohos:align_bottom="$id:page_slider"
        ohos:align_right="$id:page_slider"
        ohos:id="$+id:arc_pi_3"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toUpLeft"
        app:animationType="necklace2"
        app:spotsRadius = "6"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="60vp"
        ohos:vertical_center="true"
        ohos:align_left="$id:page_slider"
        ohos:id="$+id:arc_pi_4"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toRight"
        app:animationType="slide"
        app:spotsRadius = "18"
        app:spotShape = "roundedSquare"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="60vp"
        ohos:vertical_center="true"
        ohos:align_right="$id:page_slider"
        ohos:id="$+id:arc_pi_5"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toLeft"
        app:animationType="fill"
        app:spotsColor = "#FFFFFFFF"
        app:selectedSpotColor = "#FF000000"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="120vp"
        ohos:align_left="$id:page_slider"
        ohos:id="$+id:arc_pi_6"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toDownRight"
        app:animationType="necklace2"
        app:spotsRadius = "12"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="20vp"
        ohos:width="80vp"
        ohos:horizontal_center="true"
        ohos:id="$+id:arc_pi_7"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toDown"
        app:animationType="cover"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:align_right="$id:page_slider"
        ohos:id="$+id:arc_pi_8"
        app:pageSliderId="$id:page_slider"
        app:arcOrientation="toDownLeft"
        app:spotsRadius = "5"
        app:animationType="slide"
        app:handEnabled = "true"
    />

</DependentLayout>