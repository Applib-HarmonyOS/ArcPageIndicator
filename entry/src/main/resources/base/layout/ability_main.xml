<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:left_padding="16vp"
    ohos:right_padding="16vp"
    ohos:bottom_padding="16vp"
    ohos:top_padding="16vp"
    >

    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="center"/>

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="match_parent"
        ohos:align_bottom="$id:page_slider"

        ohos:id="$+id:arc_pi_1"
        arcOrientation="toUp"
        animationType="bump"
        spotsRadius = "24"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:align_bottom="$id:page_slider"
        ohos:align_left="$id:page_slider"

        ohos:id="$+id:arc_pi_2"
        pageSliderId="$id:page_slider"
        arcOrientation="toUpRight"
        animationType="slide"
        spotsRadius = "18"
        spotsColor = "#FF3F51B5"
        selectedSpotColor = "#FFFF4081"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="60vp"
        ohos:width="120vp"
        ohos:align_bottom="$id:page_slider"
        ohos:align_right="$id:page_slider"

        ohos:id="$+id:arc_pi_3"
        pageSliderId="$id:page_slider"
        arcOrientation="toUpLeft"
        animationType="necklace2"
        spotsRadius = "6"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="60vp"
        ohos:vertical_center="true"
        ohos:align_left="$id:page_slider"

        ohos:id="$+id:arc_pi_4"
        pageSliderId="$id:page_slider"
        arcOrientation="toRight"
        animationType="slide"
        spotsRadius = "18"
        spotShape = "roundedSquare"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="60vp"
        ohos:vertical_center="true"
        ohos:align_right="$id:page_slider"

        ohos:id="$+id:arc_pi_5"
        pageSliderId="$id:page_slider"
        arcOrientation="toLeft"
        animationType="fill"
        spotsColor = "#FFFFFFFF"
        selectedSpotColor = "#FF000000"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="120vp"
        ohos:width="120vp"
        ohos:align_left="$id:page_slider"

        ohos:id="$+id:arc_pi_6"
        pageSliderId="$id:page_slider"
        arcOrientation="toDownRight"
        animationType="necklace2"
        spotsRadius = "12"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="20vp"
        ohos:width="80vp"
        ohos:horizontal_center="true"

        ohos:id="$+id:arc_pi_7"
        pageSliderId="$id:page_slider"
        arcOrientation="toDown"
        animationType="cover"
        />

    <it.beppi.arcpageindicator.ArcPageIndicator
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:align_right="$id:page_slider"

        ohos:id="$+id:arc_pi_8"
        pageSliderId="$id:page_slider"
        arcOrientation="toDownLeft"
        spotsRadius = "5"
        animationType="slide"
        handEnabled = "true"
    />

</DependentLayout>